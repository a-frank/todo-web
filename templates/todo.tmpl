{{define "todo"}}
<tr id="todo_{{.Id}}" draggable="true" ondragstart="drag(event)">
	<td>{{if .Done}}<s>{{end}}{{.Todo}}{{if .Done}}</s>{{end}}</td>
	<td>
		<input type="checkbox"
			   class="form-check-input"
			   {{if.Done}}checked{{end}}
			   hx-post="/todo/{{.Id}}/toggle-done"
			   hx-target="#todo_{{.Id}}"
			   hx-swap="outerHTML"
			   hx-indicator="#toggle-done-indicator"
			   hx-disabled-elt="this"
		>
	</td>
</tr>
{{end}}